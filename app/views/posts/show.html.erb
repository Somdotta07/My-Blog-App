<h1>Lists of Posts for the users</h1>
<div class="user_con">
<div class="user_data_post"> 
  <h2><%= @post.title %> by <span><%= @post.user.name %></span></h2>
  
  <%= form_with url: "/posts/#{@post.id}/likes", scope: :like do |form| %>
    <%= form.submit "Like ", class: "post-like-btns"%>
  <% end %>
  <h3>Comment <%= @post.comments_counter%>,  <span>Likes <%= @post.likes_counter%></span></h3>
</div>
</div>
<div>
<div class="comments">
<% @comments.each do |comment| %>
   <h2><%= comment.user.name%>: <%= comment.text%></h2>
    <% if can? :destroy, comment %>
        <%= button_to 'Delete Comment', "/posts/:post_id/comments/#{params[:id]}", method: :delete, params: { comment_id: comment.id}, class: "del" %>
      <%end%>
<%end%>
<%= render "comments/add_comments" %>

</div>
</div>